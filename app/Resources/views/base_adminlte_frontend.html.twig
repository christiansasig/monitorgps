<!DOCTYPE html>
<html ng-app="FrontendBundleApp">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
        <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
        <meta name="description" content="">
        <meta name="author" content="Christian Sasig">
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <title>{% block title %}UIsrael{% endblock %}</title>
    {% block stylesheets %}{% endblock %}


    <link rel="stylesheet" href="{{ asset('bundles/app/libs/jquery/bootstrap/dist/css/bootstrap.min.css') }}" type="text/css" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="{{ asset('bundles/app/libs/assets/font-awesome/css/font-awesome.min.css') }}" type="text/css" />

    <!-- Ionicons -->
    <link rel="stylesheet" href="{{ asset('bundles/app/libs/ionicons/ionicons.min.css') }}">
    <!-- Theme style -->
    <link rel="stylesheet" href="{{ asset('bundles/app/html/adminlte/dist/css/AdminLTE.min.css') }}">
    <!-- AdminLTE Skins. We have chosen the skin-blue for this starter
          page. However, you can choose any other skin. Make sure you
          apply the skin class to the body tag so the changes take effect.
    -->
    <link rel="stylesheet" href="{{ asset('bundles/app/html/adminlte/dist/css/skins/skin-blue.min.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/app/html/css/main.css') }}" type="text/css" />

    <link rel="stylesheet" href="{{ asset('bundles/app/libs/angular/angular-ui-grid/ui-grid.min.css') }}" type="text/css" />
    <link rel="stylesheet" href="{{ asset('bundles/app/libs/angular/angular-ui-grid/ui-grid.bootstrap.css') }}" type="text/css" />
    <link rel="stylesheet" href="{{ asset('bundles/app/libs/angular/angular-loading-bar/loading-bar.css') }}" type="text/css" />
    <link rel="stylesheet" href="{{ asset('bundles/app/libs/angular/angular-bootstrap-nav-tree/abn_tree.css') }}" type="text/css" />
    <link rel="stylesheet" href="{{ asset('bundles/app/libs/angular/angular-ivh-treeview/ivh-treeview.min.css') }}" type="text/css" />
    <link rel="stylesheet" href="{{ asset('bundles/app/libs/angular/angular-toaster/toaster.min.css') }}" type="text/css" />
    <link rel="stylesheet" href="{{ asset('bundles/app/libs/angular/angular-ui-select/select.min.css') }}" type="text/css" />
    <link rel="stylesheet" href="{{ asset('bundles/app/libs/angular/ngmap/custom-marker.css') }}" type="text/css" />

    
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC2VklEnaHMgE5YW-nKgu4-MwmpzChOuoY&libraries=drawing"
            type="text/javascript">
    </script>
    

</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">

        <!-- Main Header -->
        <header class="main-header">

            <!-- Logo -->
            <a href="" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini"><b>A</b>LT</span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg"><b>UIsrael</b></span>
            </a>

            <!-- Header Navbar -->
            <nav class="navbar navbar-static-top" role="navigation">
                <!-- Sidebar toggle button-->
                <a href="" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <!-- Navbar Right Menu -->
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <!-- User Account Menu -->
                        <li class="dropdown user user-menu">
                            <!-- Menu Toggle Button -->
                            <a href="" class="dropdown-toggle" data-toggle="dropdown">
                                <!-- The user image in the navbar-->
                                <img src="{{ asset('bundles/app/html/images/ic_account_circle.png') }}" class="user-image" alt="User Image">
                                <!-- hidden-xs hides the username on small devices so only the image appears. -->
                                <span class="hidden-xs">{% if app.user.name is defined %}{{ app.user.name }}{% endif %}</span>
                            </a>
                            <ul class="dropdown-menu">
                                <!-- The user image in the menu -->
                                <li class="user-header">
                                    <img src="{{ asset('bundles/app/html/images/ic_account_circle.png') }}" class="img-circle" alt="User Image">

                                    <p>
                                        {% if app.user.name is defined %}{{ app.user.name }}{% endif %}
                                        <small>{% if app.user.email is defined %}{{ app.user.email }}{% endif %}</small>
                                    </p>
                                </li>

                                <!-- Menu Footer-->
                                <li class="user-footer">
                                    <div class="pull-left">
                                        <a href="#user" class="btn btn-default btn-flat">Perfil</a>
                                    </div>
                                    <div class="pull-right">
                                        <a href="{{ path('logout')}}" class="btn btn-default btn-flat">Sign out</a>
                                    </div>
                                </li>
                            </ul>
                        </li>

                    </ul>
                </div>
            </nav>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">

            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">

                <!-- Sidebar user panel (optional) -->
                <div class="user-panel">
                    <div class="pull-left image">
                        <img src="{{ asset('bundles/app/html/images/ic_account_circle.png') }}" class="img-circle" alt="User Image">
                    </div>
                    <div class="pull-left info">
                        <p>{% if app.user.name is defined %}{{ app.user.name }}{% endif %}</p>
                        <!-- Status 
                        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>-->
                    </div>
                </div>



                <!-- Sidebar Menu -->
                <ul class="sidebar-menu">
                    <li class="header">MENU</li>
                    <!-- Optionally, you can add icons to the links -->

                    <li class="active"><a href="#device"><i class="fa fa-mobile"></i> <span>Dispositivos</span></a></li>
                    <li class="active"><a href="#polygon"><i class="fa fa-map-o"></i> <span>Zonas seguras</span></a></li>
                    
                    <li class="active"><a href="#position"><i class="fa fa-map-pin"></i> <span>Posiciones</span></a></li>
                     <li class="active"><a href="#alert"><i class="fa fa-reorder"></i> <span>Alertas</span></a></li>
                        {% if (is_granted('ROLE_ADMIN') or is_granted('ROLE_SUPERADMIN'))%}
                        <li class="active"><a href="#role"><i class="fa fa-shield"></i> <span>Roles</span></a></li>
                        <li class="active"><a href="#user"><i class="fa fa-user"></i> <span>Usuarios</span></a></li>
                        {% endif %}

                </ul>
                <!-- /.sidebar-menu -->
            </section>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">

            </section>

            <!-- Main content -->
            <section class="content">

                <!-- Your Page Content Here -->
                <toaster-container toaster-options="{'time-out': 5000, 'close-button':true, 'positionClass': 'toast-top-right'}"></toaster-container>
                <div id="loading-bar-container"></div>
                <div class="row">
                    <div ng-view></div>
                </div>

            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

        <!-- Main Footer -->
        <footer class="main-footer">
            <!-- To the right -->
            <div class="pull-right hidden-xs">
                Version 1.0
            </div>
            <!-- Default to the left -->
            <strong>Copyright &copy; 2016 <a href="#">UIsrael</a>.</strong> Todos los derechos reservados.
        </footer>

        <!-- Add the sidebar's background. This div must be placed
             immediately after the control sidebar -->
        <div class="control-sidebar-bg"></div>
    </div>

    <script type="text/ng-template" id="modalDelete.html">
        <div class="modal-header">
        <button type="button" class="close" aria-label="Close" ng-click="cancel()"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">{% trans %}VALIDATION{% endtrans %}</h4>
        </div>
        <div class="modal-body">
        {% trans %}DELETE_CONFIRMATION{% endtrans %}
        </div>
        <div class="modal-footer">
        <button class="btn btn-default" type="button" ng-click="cancel()">{% trans %}CANCEL{% endtrans %}</button>
        <button class="btn btn-primary" type="button" ng-click="ok()">{% trans %}ACCEPT{% endtrans %}</button>
        </div>
    </script>




    <!-- jQuery -->
    <script type="text/javascript" src="{{ asset('bundles/app/libs/jquery/jquery/dist/jquery.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/app/libs/jquery/bootstrap/dist/js/bootstrap.js') }}"></script>
    <script src="{{ asset('bundles/app/libs/angular/angular.min.js') }}"></script>
    <script src="{{ asset('bundles/app/libs/angular/ngmap/ng-map.min.js') }}"></script>
    <script src="{{ asset('bundles/app/libs/angular/ngmap/markerclusterer.js') }}"></script>
    
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script> 
    <!-- AdminLTE App -->
    <script src="{{ asset('bundles/app/html/adminlte/dist/js/app.min.js') }}"></script>

    <!-- Angular -->

    <script src="{{ asset('bundles/app/libs/angular/angular-route.min.js') }}"></script>
    <script src="{{ asset('bundles/app/libs/angular/angular-resource.min.js') }}"></script>
    <script src="{{ asset('bundles/app/libs/angular/angular-cookies.min.js') }}"></script>
    <script src="{{ asset('bundles/app/libs/angular/angular-sanitize.min.js') }}"></script>
    <script src="{{ asset('bundles/app/libs/angular/angular-animate.min.js') }}"></script>
    <script src="{{ asset('bundles/app/libs/angular/angular-touch.min.js') }}"></script>
    <script src="{{ asset('bundles/app/libs/angular/angular-ui-validate/validate.min.js') }}"></script>
    <script src="{{ asset('bundles/app/libs/angular/angular-ui-grid/ui-grid.min.js') }}"></script>
    <script src="{{ asset('bundles/app/libs/angular/ui-bootstrap-tpls-1.3.3.min.js') }}"></script>
    <script src="{{ asset('bundles/app/libs/angular/angular-loading-bar/loading-bar.js') }}"></script>
    <script src="{{ asset('bundles/app/libs/angular/angular-bootstrap-nav-tree/abn_tree_directive.js') }}"></script>
    <script src="{{ asset('bundles/app/libs/underscore-min.js') }}"></script>
    <script src="{{ asset('bundles/app/libs/angular/angular-ivh-treeview/ivh-treeview.min.js') }}"></script>
    <script src="{{ asset('bundles/app/libs/angular/angular-toaster/toaster.min.js') }}"></script>
    <script src="{{ asset('bundles/app/libs/angular/angular-ui-select/select.min.js') }}"></script>

    <!-- Archivos personalizados para la aplicacion -->
    <script src="{{ asset('bundles/app/angular/app.js') }}"></script>
    <script src="{{ asset('bundles/app/angular/config.js') }}"></script>
    <script src="{{ asset('bundles/app/angular/routing.js') }}"></script>
    <script src="{{ asset('bundles/app/angular/Factory/UtilFactory.js') }}"></script>
    <script src="{{ asset('bundles/app/angular/Service/UiGridService.js') }}"></script>
    <script src="{{ asset('bundles/app/angular/Service/TreeService.js') }}"></script>

    <script src="{{ asset('bundles/app/angular/Controller/AddEntityController.js') }}"></script>
    <script src="{{ asset('bundles/app/angular/Controller/EditEntityController.js') }}"></script>
    <script src="{{ asset('bundles/app/angular/Controller/DeleteEntityController.js') }}"></script>
    <script src="{{ asset('bundles/app/angular/Controller/ShowEntityController.js') }}"></script>
    <script src="{{ asset('bundles/app/angular/Controller/PositionController.js') }}"></script>
    <script src="{{ asset('bundles/app/angular/Controller/ShowMapController.js') }}"></script>
    <script src="{{ asset('bundles/app/angular/Controller/PolygonController.js') }}"></script>
    <script src="{{ asset('bundles/app/angular/Controller/DeviceController.js') }}"></script>
    <script src="{{ asset('bundles/app/angular/Controller/RoleController.js') }}"></script>
    <script src="{{ asset('bundles/app/angular/Controller/UserController.js') }}"></script>
    <script src="{{ asset('bundles/app/angular/Controller/AlertController.js') }}"></script>
{% block javascripts %}{% endblock %}
</body>
</html>
