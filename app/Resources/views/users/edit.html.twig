{% extends 'fragment/fragment_modal.html.twig' %}

{% block title %}
    <h4>{% trans %}USER_EDIT_SUBTITLE{% endtrans %}</h4>
{% endblock %}

{% block body %}
    <form id="adminForm" class="form-horizontal" role="form" name="adminForm" ng-submit="processForm()">

        <div class="form-group">
            <div class="input-error">
                {{  form_errors(edit_form.name) }}
            </div>
            {{ form_label(edit_form.name, 'NAME' | trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                <div class="input-group">
                    <span class="input-group-addon">*</span>
                    {{ form_widget(edit_form.name, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="input-error">
                {{  form_errors(edit_form.dni) }}
            </div>
            {{ form_label(edit_form.dni, 'DNI' | trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                <div class="input-group">
                    <span class="input-group-addon">*</span>
                    {{ form_widget(edit_form.dni, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="input-error">
                {{  form_errors(edit_form.username) }}
            </div>
            {{ form_label(edit_form.username, 'USERNAME' | trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                    {{ form_widget(edit_form.username, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="input-error">
                {{  form_errors(edit_form.plainPassword) }}
            </div>
            {{ form_label(edit_form.plainPassword, 'PASSWORD' | trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                    {{ form_widget(edit_form.plainPassword, {'attr': {'class': 'form-control', 'ng-model': 'plainPassword', 'ng-minlength': '6', 'ng-maxlength': '64'}}) }}
                </div>
            </div>
        </div>



        <div class="form-group">
            <div class="input-error">
                {{  form_errors(edit_form.email) }}
            </div>
            {{ form_label(edit_form.email, 'EMAIL' | trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                <div class="input-group">
                    <span class="input-group-addon">@</span>
                    {{ form_widget(edit_form.email, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="input-error">
                {{  form_errors(edit_form.address) }}
            </div>
            {{ form_label(edit_form.address, 'ADDRESS' | trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(edit_form.address, {'attr': {'class': 'form-control',  'rows':'3'}}) }}
            </div>
        </div>

        <div class="row">
            <div class="panel-body">
                <div class="col-sm-6 m-b">
                    <div class="input-error">
                        {{  form_errors(edit_form.phone) }}
                    </div>
                    {{ form_label(edit_form.phone, 'PHONE' | trans) }}
                    <div class="input-group">
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-earphone"> </span>
                        </span>
                        {{ form_widget(edit_form.phone, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="col-sm-6 m-b">
                    <div class="input-error">
                        {{  form_errors(edit_form.mobile) }}
                    </div>
                    {{ form_label(edit_form.mobile, 'MOBILE' | trans) }}
                    <div class="input-group">
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-phone"> </span>
                        </span>
                        {{ form_widget(edit_form.mobile, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            {{ form_errors(edit_form.status) }}
            {{ form_label(edit_form.status, 'STATUS' | trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(edit_form.status) }}
            </div>
        </div>


        <div class="form-group">
            <div class="input-error">
                {{ form_errors(edit_form.role) }}
            </div>
            {{ form_label(edit_form.role, 'ROLE_TITLE' | trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(edit_form.role, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>


