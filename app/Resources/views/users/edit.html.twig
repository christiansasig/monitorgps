            <div class="col-sm-6 m-b">
                <div class="input-error">
                    {{  form_errors(edit_form.password) }}
                </div>
                {{ form_label(edit_form.password, 'PASSWORD' | trans) }}
                {{ form_widget(edit_form.password, {'attr': {'class': 'form-control', 'ng-model': 'password'}}) }}
            </div>
            <div class="col-sm-6 m-b">
                <label>Confirmar contraseña</label>
                <input type="password" class="form-control" name="confirm_password" required ng-model="confirm_password" ui-validate=" '$value==password' " ui-validate-watch=" 'password' ">
                <span ng-show='adminForm.confirm_password.$error.validator'>Contraseñas no coinciden !</span>
            </div>
        </div>#}


        {{ form_errors(edit_form._token) }}
        {{ form_widget(edit_form._token) }}

        {% include 'fragment/fragment_edit.html.twig'%}
    </form>

{% endblock %}

