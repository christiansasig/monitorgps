{% extends 'fragment/fragment_modal.html.twig' %}

{% block title %}
    <h4>{% trans %}EDIT{% endtrans %}</h4>
{% endblock %}

{% block body %}
    <form id="adminForm" class="form-horizontal"  role="form" name="adminForm" ng-submit="processForm()">

        <div class="form-group">
            <div class="input-error">
                {{  form_errors(edit_form.name) }}
            </div>
            {{ form_label(edit_form.name, 'NAME' | trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                <div class="input-group">
                    <span class="input-group-addon">*</span>
                    {{ form_widget(edit_form.name, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="input-error">
                {{  form_errors(edit_form.ip) }}
            </div>
            {{ form_label(edit_form.ip, 'IP' | trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                <div class="input-group">
                    <span class="input-group-addon">
                        IP
                    </span>
                    {{ form_widget(edit_form.ip, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div> 

        <div class="form-group">
            <div class="input-error">
                {{  form_errors(edit_form.mac) }}
            </div>
            {{ form_label(edit_form.mac, 'MAC' | trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                <div class="input-group">
                    <span class="input-group-addon">
                        MAC
                    </span>
                    {{ form_widget(edit_form.mac, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div> 

        <div class="form-group">
            {{ form_errors(edit_form.description) }}
            {{ form_label(edit_form.description, 'DESCRIPTION' | trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(edit_form.description, {'attr': {'class': 'form-control',  'rows':'3'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_errors(edit_form.status) }}
            {{ form_label(edit_form.status, 'STATUS' | trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(edit_form.status) }}
            </div>
        </div>

        <div class="form-group">
            <div class="input-error">
                {{ form_errors(edit_form.polygon) }}
            </div>
            {{ form_label(edit_form.polygon, 'POLYGON' | trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(edit_form.polygon, {'placeholder': 'SELECTED' | trans, 'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
            
            <div class="form-group">
            <div class="input-error">
                {{ form_errors(edit_form.user) }}
            </div>
            {{ form_label(edit_form.user, 'USER' | trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(edit_form.user, {'placeholder': 'SELECTED' | trans, 'attr': {'class': 'form-control'}}) }}
            </div>
        </div>


        {{ form_errors(edit_form._token) }}
        {{ form_widget(edit_form._token) }}

        {% include 'fragment/fragment_edit.html.twig'%}
    </form>

{% endblock %}
