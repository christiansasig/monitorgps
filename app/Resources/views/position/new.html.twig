{% extends 'fragment/fragment_modal.html.twig' %}

{% block title %}
    <h4>{% trans %}NEW{% endtrans %}</h4>
{% endblock %}

{% block body %}
    <form id="adminForm" class="form-horizontal"  role="form" name="adminForm" ng-submit="processForm()">

        <div class="form-group">
            <div class="input-error">
                {{  form_errors(form.latitude) }}
            </div>
            {{ form_label(form.latitude, 'LATITUDE' | trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                <div class="input-group">
                    <span class="input-group-addon">
                        <span class="fa fa-map-marker"></span>
                    </span>
                    {{ form_widget(form.latitude, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div> 
        <div class="form-group">
            <div class="input-error">
                {{  form_errors(form.longitude) }}
            </div>
            {{ form_label(form.longitude, 'LONGITUDE' | trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                <div class="input-group">
                    <span class="input-group-addon">
                        <span class="fa fa-map-marker"></span>
                    </span>
                    {{ form_widget(form.longitude, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div> 

        <div class="form-group">
            <div class="input-error">
                {{ form_errors(form.device) }}
            </div>
            {{ form_label(form.device, 'DEVICE' | trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.device, {'placeholder': 'SELECTED' | trans, 'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        {{ form_errors(form._token) }}
        {{ form_widget(form._token) }}

        {% include 'fragment/fragment_new.html.twig'%}
    </form>

{% endblock %}
