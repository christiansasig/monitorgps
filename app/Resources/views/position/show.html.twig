{% extends 'fragment/fragment_modal.html.twig' %}
{% block title %}
    <h3>Datos</h3>
{% endblock %}

{% block body -%}
    <div class="table-responsive">
        <table class="table table-hover">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Latitud</th>
                    <td>{{ entity.latitude }}</td>
                </tr>
                <tr>
                    <th>Longitud</th>
                    <td>{{ entity.longitude }}</td>
                </tr>
                <tr>
                    <th>Precision</th>
                    <td>{{ entity.prec }}</td>
                </tr>
                <tr>
                    <th>Altitud</th>
                    <td>{{ entity.altitude }}</td>
                </tr>
                <tr>
                    <th>{% trans %}CREATE_AT{% endtrans %}</th>
                    <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
            </tbody>
        </table>
        <ng-map id="map"  style="width: 100%; min-height: 400px; position: block;" center="{{ entity.latitude }},{{ entity.longitude }}" zoom="12">
            <marker id="markerStation{{entity.id}}"
                    position="{{ entity.latitude }},{{ entity.longitude }}" 
                    title="{{ entity.device.name }}"
                    animation="DROP"
                    draggable="true"
                    label="{{ entity.device.name }}"
                    >
            </marker>
        </ng-map>
    </div>

    {% include 'fragment/fragment_show.html.twig'%}
{% endblock %}

