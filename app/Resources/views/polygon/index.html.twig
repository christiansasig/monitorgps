<div class="col-xs-12">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Zonas seguras</h3>
        </div>
        <div class="box-body" >
            <div class="panel-body">
                <uib-alert ng-repeat="alert in alerts" type="[[alert.type]]" close="closeAlert($index)">[[alert.msg]]</uib-alert>
                <p class="btn-groups">

                    <button class="btn btn-info" ng-click="addEntity()"><i class="fa fa-plus"></i> {% trans %}NEW{% endtrans %}</button>
                    {% if (is_granted('ROLE_ADMIN') or is_granted('ROLE_SUPERADMIN'))%}
                        <button class="btn btn-default" ng-disabled="checked" ng-click="editEntity()"><i class="fa fa-edit"></i> {% trans %}EDIT{% endtrans %}</button>
                    {% endif %}
                    <button class="btn btn-default" ng-disabled="checked" ng-click="showEntity()"><i class="fa fa-info"></i> {% trans %}SHOW{% endtrans %}</button>
                    {% if (is_granted('ROLE_ADMIN') or is_granted('ROLE_SUPERADMIN'))%}
                        <button class="btn btn-default" ng-disabled="checked" ng-click="deleteEntity()"><i class="fa fa-remove"></i> {% trans %}DELETE{% endtrans %}</button>
                    {% endif %}
                </p>
            </div>

            <div class="table-responsive">
                <div ui-grid="gridOptions" class="grid" ui-grid-pagination ui-grid-selection></div>
            </div>
        </div>
    </div>
</div>